                android:layout_weight="1"
                android:src="@drawable/livescore_h" />

            <ImageView
                android:id="@+id/stic_5"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:src="@drawable/livescore_h" />

            <ImageView
                android:id="@+id/stic_6"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:src="@drawable/livescore_h" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp" >

            <ImageView
                android:id="@+id/stic_7"
                android:layout_width="50dp"

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/msg_box_rec"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/msg_bg" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:layout_weight="1" >

            <ImageButton
                android:id="@+id/TeamRoom"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                
                android:src="@drawable/logo_arsenal" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:layout_weight="1" >

            <ImageButton
                android:id="@+id/allRoom"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                
                android:src="@drawable/world" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/Chat_list_Layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.90"
        android:orientation="vertical" >
    </LinearLayout>

    <LinearLayout
        android:id="@+id/input_Layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/msg_bg"
        android:gravity="center"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:gravity="center" >

            <Button
                android:id="@+id/sendSticker_btn"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/sticker_icon" />

            <EditText
                android:id="@+id/Chat_input"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginBottom="1dp"
                android:layout_marginTop="1dp"
                android:layout_weight="1"
                android:background="@drawable/msg_box"
                android:ems="10"
                android:hint=" Put message"
                android:paddingLeft="5dp"
                android:paddingRight="5dp" >

                <requestFocus />
            </EditText>

            <Button
                android:id="@+id/send_btn"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/send_msg_icon" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
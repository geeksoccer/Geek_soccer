<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/card_background_white" >

     <RelativeLayout
        android:id="@+id/news_image_layout"
        android:layout_width="match_parent"
	    android:layout_height="256dp"
	    android:layout_alignParentLeft="true"
	    android:layout_centerVertical="true" >
	
	    <ProgressBar
	        android:id="@+id/news_image_processbar"
	        style="?android:attr/progressBarStyle"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_centerInParent="true" />
	     
	    <ImageView
	        android:id="@+id/news_image_imageview"
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:scaleType="fitXY"
	        style="?logoTheme" />
    </RelativeLayout>

    <TextView
        android:id="@+id/news_topic_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:padding="10dp"
        android:textSize="16sp"
        android:textColor="@android:color/white"
        android:background="@color/news_trans_white" />

    <TextView
        android:id="@+id/news_create_time_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_margin="10dp"
        android:textColor="@android:color/white"
        android:background="@color/news_trans_white" />

</RelativeLayout>
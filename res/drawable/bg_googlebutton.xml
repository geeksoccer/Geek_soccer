<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item 
        android:state_pressed="true">
        <color android:color="@color/yellow"/>
    </item>
    <item >
        <shape >
            <corners
                android:radius="5dp"/>
            <gradient 
                android:startColor="#842213"
                android:endColor="#C9250C"
                android:angle="90"/>
            <stroke 
                android:color="#690F01"
                android:width="2dp"/>
        </shape>
        
    </item>

</selector>
